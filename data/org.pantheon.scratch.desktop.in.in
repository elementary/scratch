[Desktop Entry]
Type=Application
_Name=Code
_Comment=Edit code files
GenericName=Code Editor
Exec=@EXEC_NAME@ %U
Icon=@CMAKE_PROJECT_NAME@
Terminal=false
Categories=GNOME;GTK;IDE;Utility;TextEditor;WebDevelopment;
_Keywords=IDE;scratch;
MimeType=text/plain;
StartupNotify=true
Actions=NewWindow;NewDocument;
X-GNOME-Gettext-Domain=@GETTEXT_PACKAGE@

[Desktop Action NewDocument]
Name=New Document
Exec=@EXEC_NAME@ --new-tab

[Desktop Action NewWindow]
Name=New Window
Exec=@EXEC_NAME@ --new-window
